# Top-most EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Dart files
[*.dart]
indent_size = 2

# YAML files (pubspec.yaml, analysis_options.yaml, workflows, etc.)
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false  # Allow trailing spaces for line breaks

# Gradle, Java, Kotlin
[*.{gradle,java,kt}]
indent_size = 4
